{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>ProductList</th>
                <td>{{ cart.productList ? cart.productList|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>ProductAmount</th>
                <td>{{ cart.productAmount ? cart.productAmount|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ cart.uuid }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ cart.createdAt ? cart.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsCompleted</th>
                <td>{{ cart.isCompleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cart_index') }}">back to list</a>

    <a href="{{ path('cart_edit', {'id': cart.id}) }}">edit</a>

    {{ include('cart/_delete_form.html.twig') }}
{% endblock %}
