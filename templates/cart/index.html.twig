{% extends 'base.html.twig' %}

{% block title %}Cart index{% endblock %}

{% block body %}
    <h1>Cart index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProductList</th>
                <th>ProductAmount</th>
                <th>Uuid</th>
                <th>CreatedAt</th>
                <th>IsCompleted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
                <td>{{ cart.id }}</td>
                <td>{{ cart.productList ? cart.productList|join(', ') : '' }}</td>
                <td>{{ cart.productAmount ? cart.productAmount|join(', ') : '' }}</td>
                <td>{{ cart.uuid }}</td>
                <td>{{ cart.createdAt ? cart.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cart.isCompleted ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('cart_show', {'id': cart.id}) }}">show</a>
                    <a href="{{ path('cart_edit', {'id': cart.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cart_new') }}">Create new</a>
{% endblock %}
