{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>ProductList</th>
                <td>{{ order.productList ? order.productList|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>ProductAmount</th>
                <td>{{ order.productAmount ? order.productAmount|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>UuidSession</th>
                <td>{{ order.uuidSession }}</td>
            </tr>
            <tr>
                <th>UuidUserId</th>
                <td>{{ order.uuidUserId }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ExpireAt</th>
                <td>{{ order.expireAt ? order.expireAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPaid</th>
                <td>{{ order.isPaid ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}">back to list</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
